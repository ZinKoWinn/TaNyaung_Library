<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox styleClass="sub-view" stylesheets="@viewdesign.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zinkowin.tanyaung.views.controllers.CardRegisterList">
   <children>
      <VBox styleClass="sub-view" stylesheets="@viewdesign.css" HBox.hgrow="ALWAYS">
         <children>
            <ToolBar prefHeight="40.0" prefWidth="200.0" styleClass="Tab_wrap">
               <items>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#add" styleClass="SubButton" text="ADD">
                           <graphic>
                              <ImageView fx:id="addimg" fitHeight="32.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                        </Button>
                        <ComboBox fx:id="name" prefWidth="150.0" promptText="Name" styleClass="combobox" />
                        <ComboBox fx:id="card_number" prefWidth="150.0" promptText="Card Number" styleClass="combobox" />
                        <ComboBox fx:id="date" prefWidth="150.0" promptText="Date" styleClass="combobox" />
                        <Button mnemonicParsing="false" onAction="#search" styleClass="btn" text="SEARCH" />
                        <Button mnemonicParsing="false" onAction="#clear" styleClass="btn" text="CLEAR" />
                     </children>
                  </HBox>
               </items>
            </ToolBar>
            <VBox styleClass="tableview" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="cardRegisterTbView" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="Name">
                          <cellValueFactory>
                              <PropertyValueFactory property="name" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="75.0" text="Library Card Number">
                          <cellValueFactory>
                              <PropertyValueFactory property="card_number" />
                          </cellValueFactory>
                      </TableColumn>
                        <TableColumn prefWidth="75.0" text="Occupation">
                          <cellValueFactory>
                              <PropertyValueFactory property="occupation" />
                          </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="phnoCol" prefWidth="75.0" text="Phone Number">
                          <cellValueFactory>
                              <PropertyValueFactory property="ph_number" />
                          </cellValueFactory>
                      </TableColumn>
                        <TableColumn prefWidth="75.0" text="Address">
                          <cellValueFactory>
                              <PropertyValueFactory property="address" />
                          </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="feesCol" maxWidth="2000.0" prefWidth="75.0" text="Fees">
                          <cellValueFactory>
                              <PropertyValueFactory property="price" />
                          </cellValueFactory>
                      </TableColumn>
                        <TableColumn fx:id="dateCol" prefWidth="75.0" text="Date">
                          <cellValueFactory>
                              <PropertyValueFactory property="date" />
                          </cellValueFactory>
                      </TableColumn>
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox styleClass="showTotal">
                     <children>
                        <Label fx:id="total" text="Label" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
