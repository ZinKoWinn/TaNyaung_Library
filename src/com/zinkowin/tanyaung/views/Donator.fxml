<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="sub-view" stylesheets="@viewdesign.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zinkowinn.tanyaunglibrary.views.controllers.DonatorList">
   <children>
      <HBox styleClass="sub-view-wrap">
         <children>
            <TextField promptText="Enter Name" styleClass="textfield" />
            <Button mnemonicParsing="false" styleClass="btn" text="ADD" />
            <Button mnemonicParsing="false" styleClass="btn" text="SEARCH" />
            <Button mnemonicParsing="false" styleClass="btn" text="CLEAR" />
         </children>
      </HBox>
      <VBox styleClass="tableview" VBox.vgrow="ALWAYS">
         <children>
            <TableView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn maxWidth="1000.0" prefWidth="75.0" text="No" />
                <TableColumn prefWidth="75.0" text="Donator Name" />
                  <TableColumn prefWidth="75.0" text="Book Name" />
                  <TableColumn maxWidth="2000.0" prefWidth="75.0" text="Quantity" />
                  <TableColumn maxWidth="800.0" minWidth="75.0" prefWidth="75.0" text="Price" />
                  <TableColumn maxWidth="3000.0" prefWidth="75.0" text="Date" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
          </VBox>
          </children>
</VBox>
